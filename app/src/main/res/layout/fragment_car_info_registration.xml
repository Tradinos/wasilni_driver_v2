<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragments.PersonalInfoRegistrationFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/register_card_margin"
        android:padding="8dp"
        app:cardElevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_fields"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/car" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/car_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/car_number_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/car_number"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="8dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/car" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/brand_manufacture_year" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/brand"
                    android:layout_width="0dp"
                    android:maxLength="100"
                    android:hint="مثال: kia"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    />

                <Spinner
                    android:id="@+id/model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/manufacture_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/color" />

                <Spinner
                    android:id="@+id/car_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_spinner"
                    android:gravity="center"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/mechanic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/car_mechanic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/optional" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/front_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/front_page" />

                <TextView
                    android:id="@+id/back_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/back_page" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/car_insurance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/car_insurance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/optional" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/insurance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/gray_border"
                    android:gravity="center"
                    android:padding="@dimen/text_view_border_padding"
                    android:text="@string/date_hint" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/insurance_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/the_image" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
