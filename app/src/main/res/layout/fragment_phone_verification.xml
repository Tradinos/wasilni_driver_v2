<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/register_card_margin"
        app:layout_constraintBottom_toTopOf="@+id/verify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/verification_label"
        android:src="@drawable/receive_sms"
        android:layout_width="@dimen/registration_image_size"
        android:layout_height="@dimen/registration_image_size" />

    <LinearLayout
        android:id="@+id/verification_label"
        android:paddingStart="34dp"
        app:layout_constraintStart_toStartOf="@id/frame"
        app:layout_constraintBottom_toTopOf="@+id/verification_layout"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/code_label"
            android:layout_marginEnd="@dimen/label_icon_end_margin"
            android:layout_width="@dimen/icon_size_height"
            android:layout_height="@dimen/icon_size_height" />
        <TextView
            android:layout_gravity="center"
            android:text="@string/verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/verification_layout"
        android:background="@color/wasilni_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:padding="@dimen/register_card_margin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/digit_1"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_white_border_green"
                android:hint="@string/one_digit_hint"
                android:maxLength="1"
                android:gravity="center"
                android:layout_marginEnd="@dimen/one_digit_margin_end"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height" />
            <EditText
                android:id="@+id/digit_2"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="@string/one_digit_hint"
                android:background="@drawable/bg_white_border_green"
                android:layout_marginEnd="@dimen/one_digit_margin_end"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height" />
            <EditText
                android:id="@+id/digit_3"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="@string/one_digit_hint"
                android:background="@drawable/bg_white_border_green"
                android:layout_marginEnd="@dimen/one_digit_margin_end"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height" />

            <EditText
                android:id="@+id/digit_4"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_white_border_green"
                android:gravity="center"
                android:hint="@string/one_digit_hint"
                android:inputType="numberDecimal"
                android:maxLength="1" />

            <EditText
                android:id="@+id/digit_5"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_white_border_green"
                android:gravity="center"
                android:hint="@string/one_digit_hint"
                android:inputType="numberDecimal"
                android:maxLength="1" />
            <EditText
                android:id="@+id/digit_6"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:hint="@string/one_digit_hint"
                android:background="@drawable/bg_white_border_green"
                android:layout_width="@dimen/one_digit_width"
                android:layout_height="@dimen/one_digit_height" />

        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/verify"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/send"
        android:textColor="@color/white"
        android:background="@drawable/gradient_red_radius_btn"
        android:layout_margin="@dimen/register_card_margin"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
