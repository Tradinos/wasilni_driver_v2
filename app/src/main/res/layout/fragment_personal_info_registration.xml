<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragments.PersonalInfoRegistrationFragment">


    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/register_card_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/register_card_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/first_name_layout"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/first_name_edit"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/last_name_layout"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/last_name_edit"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/password_layout"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/password_edit"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/label_icon_end_margin"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/captain"
                        android:layout_marginEnd="@dimen/label_icon_end_margin"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />
                    <TextView
                        android:layout_gravity="center"
                        android:text="@string/whatsapp_number_same_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/label_icon_end_margin"
                    android:layout_marginEnd="@dimen/register_card_padding"
                    android:layout_marginStart="@dimen/register_card_padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/whatsapp_yes"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:text="@string/yes"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/whatsapp_no"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:text="@string/no"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/whatsapp_phone_layout"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/captain"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/label_icon_end_margin"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/phone_layout"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_edit"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLength="9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.design.widget.TextInputLayout>
                    <TextView
                        android:text="@string/country_code"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/syria"
                        android:layout_marginEnd="4dp"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/sms"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/label_icon_end_margin"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/email_layout"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/email_edit"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/calendar"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="start"
                            android:text="@string/birthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/birthdate"
                            android:gravity="start"
                            android:layout_marginTop="@dimen/text_view_border_padding"
                            android:padding="@dimen/text_view_border_padding"
                            android:background="@drawable/gray_border"
                            android:text="@string/date_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="2"
                        android:background="@drawable/bg_spinner"
                        android:spinnerMode="dropdown" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/home"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/label_icon_end_margin"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/region_layout"
                            android:hint="@string/region"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <AutoCompleteTextView
                                android:id="@+id/region_auto_complete"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:spinnerMode="dropdown"/>
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/address_details_layout"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/address_details_edit"
                                android:drawableEnd="@drawable/edit"
                                android:hint="@string/region_details"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_between_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/passport"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/label_icon_end_margin"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="@dimen/icon_size_height" />

                    <Spinner
                        android:id="@+id/nationality"
                        android:background="@drawable/bg_spinner"
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>