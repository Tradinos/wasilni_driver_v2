<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/trip_margin"
    android:layout_width="@dimen/trip_width"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:id="@+id/item"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#48bc98"
        android:layout_width="@dimen/trip_width"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/trip_width"
            android:layout_height="wrap_content" >

            <android.support.constraint.ConstraintLayout
                android:padding="@dimen/trip_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_people_outline_primary_24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Omar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/ic_chevron_right_white_24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:background="@color/white"
                android:paddingStart="@dimen/trip_margin"
                android:paddingEnd="@dimen/trip_margin"
                android:layout_margin="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/watch_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@mipmap/stopwatch"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/duration"
                    style="@style/rideText"
                    android:text="3 min"
                    android:layout_marginStart="@dimen/trip_margin"
                    app:layout_constraintStart_toEndOf="@id/watch_image"
                    app:layout_constraintBottom_toBottomOf="@id/watch_image"
                    app:layout_constraintTop_toTopOf="@id/watch_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/marker_image"
                    android:layout_marginTop="@dimen/trip_margin"
                    android:src="@mipmap/green_marker"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/watch_image"
                    app:layout_constraintTop_toBottomOf="@id/watch_image"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/start_place"
                    style="@style/rideText"
                    android:text="مشروع دمر لاجمزيرة الرابعة جامع خالد"
                    android:layout_marginStart="@dimen/trip_margin"
                    app:layout_constraintStart_toEndOf="@id/marker_image"
                    app:layout_constraintBottom_toBottomOf="@id/marker_image"
                    app:layout_constraintTop_toTopOf="@id/marker_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
