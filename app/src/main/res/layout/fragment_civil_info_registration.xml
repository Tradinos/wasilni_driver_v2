<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragments.PersonalInfoRegistrationFragment">

    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/register_card_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/license" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/driving_license" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/license_date_start"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_view_border_padding"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border"
                    android:gravity="center"
                    android:padding="@dimen/text_view_border_padding"
                    android:text="@string/start_date" />

                <TextView
                    android:id="@+id/license_date_end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border"
                    android:gravity="center"
                    android:padding="@dimen/text_view_border_padding"
                    android:text="@string/end_date" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/no_conviction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/has_no_conviction" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/optional" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/convicted_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/the_image" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/bank" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/has_bank_account" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bank_yes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/yes" />

                <TextView
                    android:id="@+id/bank_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/no" />
            </LinearLayout>

            <Spinner
                android:id="@+id/bank_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_between_fields"
                android:background="@drawable/bg_spinner"
                android:spinnerMode="dropdown" />


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:src="@drawable/captain" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/image_identification" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/optional" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/register_card_padding"
                android:layout_marginTop="@dimen/label_icon_end_margin"
                android:layout_marginEnd="@dimen/register_card_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_front_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/front_page" />

                <TextView
                    android:id="@+id/id_back_page"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/back_page" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
