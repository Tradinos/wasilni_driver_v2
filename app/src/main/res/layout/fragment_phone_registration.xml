<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login"
        android:layout_margin="@dimen/register_card_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/register_card_padding"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/receive_sms"
                android:layout_width="@dimen/registration_image_size"
                android:layout_height="@dimen/registration_image_size" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/captain"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/label_icon_end_margin"
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="@dimen/icon_size_height" />
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    android:id="@+id/phone_layout"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phone_edit"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:text="@string/country_code"
                    android:layout_marginEnd="4dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/syria"
                    android:layout_marginEnd="4dp"
                    android:layout_width="@dimen/icon_size_height"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@id/login"
        app:layout_constraintBottom_toTopOf="@+id/register"
        android:text="@string/login"
        android:textColor="@color/white"
        android:background="@drawable/gradient_green_radius_btn"
        android:layout_margin="@dimen/register_card_margin"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/register"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/captain_register"
        android:textColor="@color/white"
        android:background="@drawable/gradient_red_radius_btn"
        android:layout_margin="@dimen/register_card_margin"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>

