<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardElevation="3dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register"
        android:layout_margin="@dimen/register_card_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/register_card_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/receive_sms"
                    android:layout_width="@dimen/registration_image_size"
                    android:layout_height="@dimen/registration_image_size" />

                <LinearLayout
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/country_code"
                        android:layout_marginEnd="4dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/syria"
                        android:layout_marginEnd="4dp"
                        android:layout_width="@dimen/icon_size_height"
                        android:layout_height="wrap_content" />
                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="1"
                        android:id="@+id/phone_layout"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/phone_edit"
                            android:hint="@string/phone_number"
                            android:inputType="phone"
                            android:maxLength="9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
                <TextView
                    android:id="@id/login"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:fontFamily="@font/bahij_thesansarabic_bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" لديك حساب ؟ قم بتسجيل الدخول الان"
                    />
            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/register_card_margin"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_red_radius_btn"
        android:text="@string/captain_register"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>

