<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/mark_road_car"
                android:layout_marginEnd="36dp"
                android:layout_marginStart="36dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>
                <ImageView
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

            </RelativeLayout>
            <TextView
                android:text="how was your trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/star_1"
                    android:src="@drawable/star_stroke"
                    android:layout_marginEnd="@dimen/margin_end_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/star_2"
                    android:src="@drawable/star_stroke"
                    android:layout_marginEnd="@dimen/margin_end_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/star_3"
                    android:src="@drawable/star_stroke"
                    android:layout_marginEnd="@dimen/margin_end_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/star_4"
                    android:src="@drawable/star_stroke"
                    android:layout_marginEnd="@dimen/margin_end_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/star_5"
                    android:src="@drawable/star_stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rating_comment"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="what went wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:text="Time issue"
                        android:layout_marginBottom="@dimen/margin_bottom_radio_btn"
                        android:button="@drawable/radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Time issue"
                        android:layout_marginBottom="@dimen/margin_bottom_radio_btn"
                        android:button="@drawable/radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Time issue"
                        android:layout_marginBottom="@dimen/margin_bottom_radio_btn"
                        android:button="@drawable/radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Time issue"
                        android:layout_marginBottom="@dimen/margin_bottom_radio_btn"
                        android:button="@drawable/radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:text="Time issue"
                        android:button="@drawable/radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RadioGroup>

            </LinearLayout>
            <Button
                android:text="send"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gradient_green_radius_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>